# AlignCV Test Environment Configuration
# This file is used during testing only

# Database (Use separate test database)
DATABASE_URL=sqlite+aiosqlite:///./test_aligncv.db

# JWT (Test keys)
JWT_SECRET_KEY=test_secret_key_for_testing_only_not_for_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
ENVIRONMENT=testing
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://testserver

# Storage (Local for testing)
STORAGE_BACKEND=local
LOCAL_STORAGE_PATH=./test_storage/uploads
MAX_FILE_SIZE_MB=5

# Disable external services in tests
MISTRAL_API_KEY=test_mistral_key
QDRANT_API_KEY=test_qdrant_key
QDRANT_URL=http://localhost:6333
SENDGRID_API_KEY=test_sendgrid_key
UPSTASH_REDIS_REST_URL=redis://localhost:6379
UPSTASH_REDIS_REST_TOKEN=test_redis_token

# Logging
LOG_LEVEL=DEBUG
SENTRY_DSN=

# SpaCy
SPACY_MODEL=en_core_web_sm
